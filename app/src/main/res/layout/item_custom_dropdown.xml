<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.taskforce.episample.collection.viewmodels.CustomDropdownViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_field_spacing"
            android:text="@{vm.fieldName}"
            tools:text="Primary Language *"/>
        
        <Spinner
            android:id="@+id/dropdown"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/custom_field_spacing"
            android:adapter="@{vm.adapter}"
            tools:listitem="@layout/support_simple_spinner_dropdown_item"/>

    </LinearLayout>

</layout>