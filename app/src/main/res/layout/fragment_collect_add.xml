<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="toolbarVm"
            type="org.taskforce.episample.navigation.ui.NavigationToolbarViewModel" />

        <variable
            name="vm"
            type="org.taskforce.episample.collection.viewmodels.CollectAddViewModel" />

        <variable
            name="gpsVm"
            type="org.taskforce.episample.collection.ui.CollectGpsPrecisionViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- Map -->
                <FrameLayout
                    android:id="@+id/collectAddMap"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!-- Image card -->
                <android.support.v7.widget.CardView
                    android:id="@+id/photoWrapper"
                    visibleOrGone="@{vm.showPhotoCard}"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/collectAddMap"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    android:background="@android:color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <android.support.constraint.ConstraintLayout
                        visibleOrGone="@{vm.showPhotoButton}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/monochromeAccent"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/collectAddImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{vm::seePhoto}"
                            android:scaleType="centerCrop"
                            android:src="@drawable/photo_empty"
                            app:layout_constraintBottom_toTopOf="@id/photoText"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/photoText"
                            visibleOrGone="@{vm.showTakePhoto}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{vm::takePhoto}"
                            android:paddingBottom="8dp"
                            android:text="@{vm.photoText}"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="TAKE A PICTURE" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <!-- Landmark fields -->
                <LinearLayout
                    android:id="@+id/landmarkSection"
                    visibleOrGone="@{vm.isLandmark}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/photoWrapper"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        visibleOrGone="@{vm.isLandmark}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/landmarkName"
                            error="@{vm.landmarkError}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@{vm.landmarkHint}"
                            app:errorEnabled="@{vm.landmarkErrorEnabled}"
                            app:errorTextAppearance="@style/errorStyle"
                            tools:hint="Notes">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/landmarkNameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:text="@={vm.landmarkName}"
                                android:textSize="18sp" />

                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                imageUrl="@{vm.landmarkImage}"
                                placeholderRes="@{@drawable/icon_landmark_default}"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />

                            <Spinner
                                android:id="@+id/landmarkImageSelector"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Enumeration fields -->
                <LinearLayout
                    android:id="@+id/enumerationSection"
                    visibleOrGone="@{!vm.isLandmark}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/landmarkSection"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:id="@+id/excludeWrapper"
                        visibleOrGone="@{vm.showExclude}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="@={vm.exclude}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@{vm.excludeText}"
                            tools:text="Exclude" />

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/primarySubjectLabel"
                        error="@{vm.primaryLabelError}"
                        visibleOrGone="@{!vm.isLandmark}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/custom_field_spacing"
                        android:hint="@{vm.primaryLabelHint}"
                        app:errorEnabled="@{vm.primaryLabelErrorEnabled}"
                        app:errorTextAppearance="@style/errorStyle">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/primarySubjectLabelInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:text="@={vm.primaryLabel}"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/customFieldHolder"
                        visibleOrGone="@{!vm.isLandmark}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- Common items -->
                <LinearLayout
                    android:id="@+id/collectCommonSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/enumerationSection"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/notesWrapper"
                        error="@{vm.notesError}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@{vm.notesHint}"
                        app:errorEnabled="@{vm.notesErrorEnabled}"
                        app:errorTextAppearance="@style/errorStyle">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/notesInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:text="@={vm.notes}"
                            android:textSize="18sp" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/duplicatedGpsIcon"
                            visibleOrGone="@{vm.showDuplicateIcon}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="11dp"
                            android:gravity="center"
                            android:src="@drawable/icon_gps_lock" />

                        <TextView
                            android:id="@+id/gpsView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/textColorDisabled"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="4dp"
                            android:text="@{vm.gpsDisplay}"
                            android:textColor="@color/textColorInverse"
                            tools:text="37.4217983, -122.084" />
                    </LinearLayout>

                    <include
                        android:id="@+id/gpsPrecision"
                        layout="@layout/app_gps_precision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:vm="@{vm.gpsVm}" />

                    <TextView
                        android:id="@+id/collectAddPoorGps"
                        visibleOrGone="@{vm.showPoorGps}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="@{vm.poorGpsError}"
                        android:textColor="@color/colorError"
                        android:textSize="16sp"
                        tools:text="Searching for GPS location. Try moving a few meters away for a better signal." />

                    <TextView
                        android:id="@+id/collectAddDuplicateGps"
                        enabled="@{vm.duplicateGpsEnabled}"
                        visibleOrGone="@{!vm.isLandmark}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:onClick="@{() -> vm.showDuplicateGpsDialog()}"
                        android:text="@{vm.collectGpsText}"
                        android:textColor="@color/collect_duplicate_gps"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="USE LAST RECORDED GPS" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/collectAddButtonsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/collectCommonSection"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <Button
                        android:id="@+id/collectAddSaveEnumeration"
                        visibleOrGone="@{!vm.isLandmark}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@{vm.saveEnumerationButtonBackground}"
                        android:onClick="@{() -> vm.saveItem()}"
                        android:paddingStart="36dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="36dp"
                        android:paddingBottom="12dp"
                        android:text="@{vm.saveEnumerationButtonText}"
                        android:textColor="@{vm.saveEnumerationButtonTextColor}"
                        android:textStyle="bold"
                        tools:text="SAVE AS INCOMPLETE" />

                    <Button
                        android:id="@+id/collectAddSaveLandmark"
                        visibleOrGone="@{vm.isLandmark}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@{vm.saveLandmarkButtonBackground}"
                        android:onClick="@{() -> vm.saveItem()}"
                        android:paddingStart="36dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="36dp"
                        android:paddingBottom="12dp"
                        android:text="@{vm.saveLandmarkButtonText}"
                        android:textColor="@{vm.saveLandmarkButtonTextColor}"
                        android:textStyle="bold"
                        tools:text="SAVE AS INCOMPLETE" />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/app_navigation_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:vm="@{toolbarVm}"
            tools:visible="true" />

    </RelativeLayout>

</layout>