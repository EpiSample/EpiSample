<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="org.taskforce.episample.collection.viewmodels.CustomCheckboxViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="@={vm.checked}"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/custom_field_spacing"
            android:layout_marginBottom="@dimen/custom_field_spacing"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.title}"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>

    </LinearLayout>

</layout>