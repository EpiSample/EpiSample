<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="org.taskforce.episample.collection.viewmodels.CustomDateViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_field_spacing"
            android:layout_marginBottom="@dimen/custom_field_spacing"
            android:hint="@{vm.hint}"
            android:onClick="@{() -> vm.showDatePicker()}">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="datetime"
                android:text="@{vm.input}"
                android:textSize="14sp"
                android:clickable="false"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</layout>