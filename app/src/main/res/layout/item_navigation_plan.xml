<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.taskforce.episample.navigation.ui.NavigationPlanItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:onClick="@{() -> vm.viewNavigationPlan()}"
        app:contentPadding="16dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/navigationItemCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/navigationPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.planName}"
                android:textSize="16sp"
                tools:text="Sublist #1" />

            <TextView
                android:id="@+id/navigationPlanCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{vm.planCount}"
                android:textColor="@color/textColorDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navigationPlanTitle"
                tools:text="50 Households" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
