<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="org.taskforce.episample.config.fields.CustomFieldsAddDropdownViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorDetails"
            android:id="@+id/number"
            android:text="@{vm.number}"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit"
            android:src="@drawable/icon_settings_darkgray_24"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/number"
            android:layout_toStartOf="@id/edit"
            android:id="@+id/name"
            android:textSize="16sp"
            android:text="@={vm.input}"
            android:hint="@{vm.hint}"/>

    </RelativeLayout>

</layout>