<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="toolbarVm"
            type="org.taskforce.episample.toolbar.viewmodels.ToolbarViewModel" />

        <variable
            name="headerVm"
            type="org.taskforce.episample.config.base.ConfigHeaderViewModel" />

        <variable
            name="vm"
            type="org.taskforce.episample.config.base.ConfigSuccessViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="56dp">

            <include
                android:id="@+id/header"
                layout="@layout/app_config_header"
                app:vm="@{headerVm}" />

            <android.support.v7.widget.CardView
                android:id="@+id/configCard"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:layout_marginTop="24dp"
                android:elevation="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="24dp">

                    <ImageView
                        android:id="@+id/configIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/icon_file_darkgray_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/name"
                        android:layout_alignStart="@id/name"
                        android:layout_marginBottom="4dp"
                        android:text="@{vm.title}"
                        android:textColor="@color/textColorDetails"
                        android:textSize="12sp"
                        tools:text="Configuration" />
                    
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/configIcon"
                        android:layout_toEndOf="@id/configIcon"
                        android:text="@{vm.config.name}"
                        android:textSize="16sp"
                        tools:text="Config"/>
                    
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/name"
                        android:layout_below="@id/name"
                        android:layout_marginTop="4dp"
                        android:text="@{vm.date}"
                        android:textColor="@color/textColorDetails"
                        android:textSize="12sp"
                        tools:text="Created October 15, 2018"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:padding="4dp"
                        android:text="@{vm.createStudy}"
                        android:clickable="@{vm.createStudyClickable}"
                        android:onClick="@{vm.onCreateStudy}"
                        android:textColor="@{vm.cardTextColor}"
                        android:textSize="14sp"
                        tools:text="CREATE A STUDY"
                        tools:textColor="@color/colorAccent"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/controlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@{vm.buttonBackgroundColor}"
                android:onClick="@{() -> vm.buttonWrapper()}"
                android:padding="12dp"
                android:text="@{vm.configSuccessBack}"
                android:textColor="@color/textColorInverse"
                android:textSize="14sp"
                tools:text="RETURN TO MAIN SCREEN"
                tools:background="@color/colorAccent"/>

            <TextView
                visibleOrGone="@{vm.showError}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.errorMessageText}"
                android:textColor="@{vm.failureColor}"
                app:layout_constraintTop_toBottomOf="@id/configCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <include
            layout="@layout/app_toolbar"
            app:vm="@{toolbarVm}" />

    </RelativeLayout>
</layout>