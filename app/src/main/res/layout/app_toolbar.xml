<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="org.taskforce.episample.toolbar.viewmodels.ToolbarViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/toolbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:elevation="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/toolbarBack"
                    visibleOrGone="@{vm.backVisibility}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:onClick="@{() -> vm.backAction.invoke()}"
                    android:src="@drawable/icon_back_white_24"/>

                <TextView
                    android:id="@+id/toolbarTitle"
                    visible="@{vm.titleVisibility}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/toolbarBack"
                    android:layout_marginStart="8dp"
                    android:lineSpacingExtra="8sp"
                    android:text="@{vm.title}"
                    android:textColor="@color/textColorInverse"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/toolbarHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/toolbarLanguage"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> vm.openHelp()}"
                    android:src="@drawable/icon_help_white" />

                <ImageView
                    android:id="@+id/toolbarLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> vm.showLanguages()}"
                    android:src="@drawable/icon_language_white" />

            </RelativeLayout>

        </Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/toolbarLanguageList"
            visible="@{vm.languageSelectVisibility}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:adapter="@{vm.languageAdapter}"
            android:background="@android:color/white"
            android:elevation="16dp"
            android:padding="16dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </RelativeLayout>
</layout>