<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.taskforce.episample.config.base.BaseConfigViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/greyHighlights"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/ic_stepper_back"
            android:drawablePadding="8dp"
            android:enabled="@{vm.backEnabled}"
            android:onClick="@{vm::onBackClicked}"
            android:text="@{vm.backText}"
            android:textColor="@color/toggle_color_black"
            tools:ignore="RtlHardcoded"
            tools:text="BACK"
            />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:max="@{vm.configScreenCount}"
            android:progress="@{vm.progress}"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:drawableRight="@drawable/ic_stepper_next"
            android:drawablePadding="8dp"
            android:enabled="@{vm.nextEnabled}"
            android:onClick="@{vm::onNextClicked}"
            android:text="@{vm.nextText}"
            android:textColor="@color/toggle_color_black"
            tools:ignore="RtlHardcoded"
            tools:text="NEXT"
            />

    </LinearLayout>
</layout>