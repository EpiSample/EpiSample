<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="org.taskforce.episample.config.geography.GeographyDialogViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="4dp"
        android:paddingStart="24dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@{vm.title}"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/latitudeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:hint="@{vm.latitudeHint}">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/latitudeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberDecimal|numberSigned"
                android:text="@={vm.latitude}"
                android:textSize="18sp"
                android:maxLength="11" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/longitudeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitudeWrapper"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:hint="@{vm.longitudeHint}">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/longitudeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberDecimal|numberSigned"
                android:text="@={vm.longitude}"
                android:textSize="18sp"
                android:maxLength="11" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/radiusWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitudeWrapper"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:hint="@{vm.radiusHint}">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/radiusInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@={vm.radius}"
                android:textSize="18sp"
                android:inputType="numberDecimal"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/radiusWrapper"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/useCurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{vm::useCurrentLocation}"
                android:padding="16dp"
                android:layout_gravity="right"
                android:text="@string/use_current_location"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> vm.cancel.invoke()}"
                android:padding="16dp"
                android:layout_gravity="right"
                android:text="@{vm.cancelText}"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> vm.generateArea()}"
                android:layout_gravity="right"
                android:padding="16dp"
                android:text="@{vm.area}"
                android:clickable="@{vm.submitEnabled}"
                android:textColor="@{vm.submitColor}"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded"/>

        </LinearLayout>

    </RelativeLayout>

</layout>