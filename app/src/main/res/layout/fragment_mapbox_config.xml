<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.taskforce.episample.mapbox.MapboxConfigViewModel" />

        <variable
            name="toolbarVm"
            type="org.taskforce.episample.toolbar.viewmodels.AppToolbarViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fragment_mapbox_config_mapFrame"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/toolbar_height"
                    android:keepScreenOn="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--Cover map to stop user from interacting with it-->

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/toolbar_height"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_mapbox_config_mapFrame"
                    app:layout_constraintEnd_toEndOf="@id/fragment_mapbox_config_mapFrame"
                    app:layout_constraintStart_toStartOf="@id/fragment_mapbox_config_mapFrame"
                    app:layout_constraintTop_toTopOf="@id/fragment_mapbox_config_mapFrame" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mapbox_enter_custom_style"
                    app:errorTextAppearance="@style/errorStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_mapbox_config_mapFrame">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:text="@={vm.styleUrl}"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:lines="3"
                        android:text="@{vm.southWestLatLngString}"
                        android:textColor="@color/textColorPrimary"
                        tools:text="Southwest" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:lines="3"
                        android:text="@{vm.northEastLatLngString}"
                        tools:text="Northeast" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/minZoomInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@{vm.minZoomHintString}"
                    app:errorTextAppearance="@style/errorStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:text="@={vm.minZoomString}"
                        android:textSize="18sp"
                        tools:text="10" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/maxZoomInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@{vm.maxZoomHintString}"
                    app:errorTextAppearance="@style/errorStyle"
                    app:layout_constraintTop_toBottomOf="@+id/minZoomInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:text="@={vm.maxZoomString}"
                        android:textSize="18sp"
                        tools:text="16" />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/fragment_mapbox_config_testStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/button_color"
                    android:enabled="@{vm.testStyleEnabled}"
                    android:padding="8dp"
                    android:text="@string/mapbox_test_style"
                    android:textColor="@color/textColorInverse"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/fragment_mapbox_config_downloadButton"
                    app:layout_constraintTop_toBottomOf="@+id/maxZoomInputLayout" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/fragment_mapbox_config_downloadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="@dimen/bottom_bar_height"
                    android:backgroundTint="@color/button_color"
                    android:enabled="@{vm.downloadEnabled}"
                    android:padding="8dp"
                    android:text="@string/mapbox_download_button_text"
                    android:textColor="@color/textColorInverse"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/maxZoomInputLayout" />

                <ProgressBar
                    android:id="@+id/fragment_mapbox_config_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_mapbox_config_downloadButton"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/bottom_bar"
            layout="@layout/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_bar_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:vm="@{vm}" />

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/app_new_toolbar"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent"
            bind:vm="@{toolbarVm}"
            tools:visible="true" />

    </android.support.constraint.ConstraintLayout>

</layout>