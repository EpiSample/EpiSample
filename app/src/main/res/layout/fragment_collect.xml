<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.taskforce.episample.collection.viewmodels.CollectViewModel" />

        <variable
            name="cardVm"
            type="org.taskforce.episample.collection.viewmodels.CollectCardViewModel" />

        <variable
            name="toolbarVm"
            type="org.taskforce.episample.navigation.ui.NavigationToolbarViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/app_navigation_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:vm="@{toolbarVm}"
            tools:visible="true" />

        <FrameLayout
            android:id="@+id/collectionMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_height"
            android:layout_marginBottom="160dp"
            android:keepScreenOn="true" />

        <include
            layout="@layout/app_collect_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="64dp"
            android:layout_marginRight="8dp"
            app:vm="@{cardVm}" />

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/collectionSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/defaultBackground"
                android:elevation="8dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                app:behavior_hideable="false"
                app:behavior_peekHeight="160dp"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/bottom_sheet_hook" />

                <TextView
                    android:id="@+id/collectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="5 Places Added" />

                <TextView
                    android:id="@+id/collectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{vm.descriptionText}"
                    android:textSize="14sp"
                    tools:text="3 People, 2 Landmarks" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/collectAddSubject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:onClick="@{() -> vm.addPoint.invoke(false)}"
                        android:text="@{vm.householdButtonText}"
                        android:textColor="@color/textColorInverse"
                        android:textSize="14sp"
                        tools:text="+ Person" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/collectAddLandmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:onClick="@{() -> vm.addPoint.invoke(true)}"
                        android:text="@{vm.landmarkButtonText}"
                        android:textColor="@color/textColorInverse"
                        android:textSize="14sp"
                        tools:text="+ Landmark" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/collectList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

</layout>